<div class="container">
  <div class="card">
    <div class="card-header">
      <strong>Horizontal</strong> Form
    </div>
    <div class="card-body card-block">
      <form method="post" class="form-horizontal">
        <div class="row form-group">
          <div class="col-md-3" style="text-align: right">
            <label class=" form-control-label">College :</label>
          </div>
          <div class="col-md-9">
            <select name="college" class="form-control" required>
              <option selected disabled>Select One</option>
              {{#each colleges}}
              <option value="{{this.name}}">{{this.name}}</option>
              {{/each}}
            </select> 
          </div>
        </div>
        <div class="row form-group">
          <div class="col-md-3" style="text-align: right">
            <label class=" form-control-label">Title :</label>
          </div>
          <div class="col-md-9">
            <input type="text" name="title" class="form-control" required="">
          </div>
        </div>
        <div class="row form-group">
          <div class="col-md-3" style="text-align: right">
            <label class=" form-control-label">Description :</label>
          </div>
          <div class="col-md-9">
            <input type="text" name="description" class="form-control" required="">
          </div>
        </div>
        <div class="row form-group">
          <div class="col-md-3" style="text-align: right">
            <label class=" form-control-label">Class :</label>
          </div>
          <div class="col-md-9">
            <select name="class" class="form-control" required>
              <option selected disabled>Select One</option>
              {{#each classes}}
              <option value="{{this}}">{{this}}</option>
              {{/each}}
            </select> 
          </div>
        </div>
        <div class="row form-group">
          <div class="col-md-3" style="text-align: right">
            <label class=" form-control-label">Start :</label>
          </div>
          <div class="col-md-9">
            <input type="text" name="start" class="form-control" required="">
          </div>
        </div>
        <div class="row form-group">
          <div class="col-md-3" style="text-align: right">
            <label class=" form-control-label">End :</label>
          </div>
          <div class="col-md-9">
            <input type="text" name="end" class="form-control" required="">
          </div>
        </div>
        <button type="submit" class="btn btn-primary btn-sm">
          <i class="fa fa-dot-circle-o"></i> Submit
        </button>

      </form>
    </div>
  </div>  
</div>