<div class="container">
  <div class="card">
    <div class="card-body">
      Colleges Added:
      <div class="container">
        <ul>
          {{#each colleges}}
          <li>{{this.name}}</li>
          {{/each}}
        </ul>

        
      </div>

      <hr>

      <h4>Add New College</h4>
      <form method="post">
        <div class="form-group row" >
          <div class="col-md-3" style="text-align: right">
            <label class="form-control-label">Name : </label>
            
          </div>
          <div class="col-md-9">
            <input type="text" name="name" required="" class="form-control">
            
          </div>
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Add New</button>
      </form>

    </div>
  </div>
</div>

<div class="card">

  <div class="card-header">
    <h3>Events</h3>
  </div>
  <div class="card-body">
    <div id="table" class="table-editable">  
      <div class="mb-3">
        <a href="events/new"><button class="btn btn-primary"><i class="fa fa-plus"></i> Add New</button></a>
      </div>
      <div>
        <table class="table">
          <tr class="header">
            <th>Title</th>
            <th>Description</th>
            <th>Class</th>
            <th>Start</th>
            <th>End</th>
            <th></th>
            <!-- <th></th> -->
          </tr>
          {{#each events}}
          <tr>
            <th>{{this.title}}</th>
            <th>{{this.description}}</th>
            <th>{{this.class}}</th>
            <th>{{this.start}}</th>
            <th>{{this.end}}</th>
            <th><a href="events/edit/{{this._id}}"><i class="fa fa-pencil"></i></a></th>
          </tr>
          {{/each}}
          
          </table>
        </div>
      </div>


    </div>
  </div>

  {{#contentFor 'pageScripts'}}
  <script type="text/javascript">

  var $ = jQuery;
  </script>
  {{/contentFor}}